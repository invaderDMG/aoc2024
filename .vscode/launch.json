{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug First",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/day${input:day}/first.py",
        "console": "integratedTerminal",
        "justMyCode": true,
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "args": []
      },
      {
        "name": "Debug Second",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/day${input:day}/second.py",
        "console": "integratedTerminal",
        "justMyCode": true,
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "args": []
      }
    ],
    "inputs": [
      {
        "id": "day",
        "type": "promptString",
        "description": "Enter the day number",
        "default": "1"
      }
    ]
  }